        .containers {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            margin-top: 10%;
        }

        .card {
            position: relative;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1),
                inset 2px 2px rgba(255, 255, 255, 0.2),
                5px 5px 15px rgba(0, 0, 0, 0.1),
                10px 10px 15px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            margin-bottom: 20px;
            background-color: rgba(240, 248, 255, 0.667);
        }

        .content {
            margin: 20px;
            padding: 10px;
            color: #fff;
            display: flex;
            align-items: center;

        }

        .card h1 {
            color: #fff;

            font-size: 2.2em;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
        }

        form ion-icon {
            font-size: 1.7em;
            margin-right: 10px;
            transition: 0.5s;
        }

        form input {
            font-size: 1.1em;
            background: transparent;
            outline: none;
            border: none;
            color: #fff;
            padding: 8px 20px;
            border-radius: 10px;
        }

        form button {
            font-weight: 500;
            font-size: 1.2em;
            padding: 8px 20px;
            border-radius: 10px;
            transition: 0.5s;
        }
        form input:focus{
            background: #ffffff;
            color: #333;
        }
        form button:hover {
            background: #fff;
            color: #333;
        }



        form label {
            margin-left: 10px;
        }

        p {
            opacity: 0;
        }
        .content.btn{
            display: flex;
            justify-content: center;
            align-items: center;
        }
        /* button:focus {
            background: #fff;
            color: #333;s
        } */
        .content.btn button{
            cursor: pointer;
            transition: 0.5s;
            border: none;
            outline: none;
        }
        .content.btn button:hover{
            transform: scale(1.2);
        }
    </style>
</head>

<body>
    <%- include('partials/header') %>
