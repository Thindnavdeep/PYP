        <section>
            <div class="containers">
                <div class="card">
                    <form method="POST" action="/login" autocomplete="off">
                        <div class="content">
                            <ion-icon name="person"></ion-icon>
                            <input type="text" class="text" name="username" placeholder="Enter Name" required="required">
                        </div>
                        <div class="content">
                            <ion-icon name="lock-closed"></ion-icon>
                            <input type="password" name="password" placeholder="Enter Password" required="required" id="password"><br>
                        </div>
                        <div class="content">
                            <input type="checkbox"><label for="">Remember me</label>
                        </div>
                        <div class="content btn">
                            <button>Login</button>
                        </div>
                    </form>
                </div>
            </div>
            </div>
        </section>
